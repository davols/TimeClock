<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="se.dxapps.timeclock" android:versionCode="4"
	android:versionName="0.17_Beta">
	<uses-sdk android:minSdkVersion="4" />

	<application android:name="se.dxapps.beta.timeclock.TClock" android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name="se.dxapps.beta.timeclock.TimeClock" android:theme="@android:style/Theme.NoTitleBar"
		     android:configChanges="orientation|keyboardHidden" 
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
