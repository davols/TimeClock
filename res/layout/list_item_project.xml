
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingTop="10dp" android:paddingBottom="10dp"
	android:layout_width="fill_parent" android:layout_height="wrap_content">

	<TextView android:id="@+id/item_header"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"

		android:textSize="20sp" android:layout_width="wrap_content"
		android:textColor="@color/buttonTextColor" android:layout_height="wrap_content" />
	<TextView android:layout_width="wrap_content"
		android:layout_alignBottom="@id/item_header" android:layout_alignTop="@id/item_header"
		android:layout_marginLeft="3dp" android:layout_marginTop="3dp"
		android:layout_toRightOf="@id/item_header" android:id="@+id/item_counter"
		android:gravity="center"
		android:textColor="@color/buttonTextColor" android:layout_height="wrap_content" />

</RelativeLayout>
